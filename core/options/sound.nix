{ pkgs, lib, ... }: {
  environment.systemPackages = with pkgs; [ pamixer pavucontrol ];
  hardware.pulseaudio.enable = lib.mkForce false;
  security.rtkit.enable = true;
  services.pipewire = {
    enable = true;
    alsa.enable = true;
    alsa.support32Bit = true;
    pulse.enable = true;
    jack.enable = true;
  };
}
